{
  "update.mode": "none",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "github.copilot.nextEditSuggestions.enabled": true,
  "editor.fontSize": 14,
  "extensions.experimental.affinity": {
      "asvetliakov.vscode-neovim": 1
  },
  "workbench.tree.indent": 24,
  "workbench.tree.renderIndentGuides": "always",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.cursorSurroundingLines": 3,
  "editor.linkedEditing": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "zenMode.hideLineNumbers": false,
  "window.zoomLevel": 0.4,
  "breadcrumbs.enabled": true,

  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // split navigation and buffer switching
    { "before": ["<Tab>"], "commands": [":bnext"] },
    { "before": ["<S-Tab>"], "commands": [":bprevious"] },
    { "before": ["leader", "\\"], "commands": [":vsplit"] },
    { "before": ["leader", "-"], "commands": [":split"] },
    { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
    { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
    { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
    { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },

    { "before": ["[", "d"], "commands": ["editor.action.marker.prev"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.next"] },
    { "before": ["<leader>", "c", "a"], "commands": ["editor.action.quickFix"] },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "c", "f"], "commands": ["editor.action.formatDocument"] },
    { "before": ["g", "h"], "commands": ["editor.action.showDefinitionPreviewHover"] },
    { "before": ["<CR>"], "commands": ["editor.action.insertLineAfter", "cursorUp"] },
    { "before": ["<leader>", "<CR>"], "commands": ["editor.action.insertLineBefore", "cursorDown"] },

    { "before": ["leader", "a"], "commands": ["editor.action.selectAll"] },
    { "before": ["<leader>", "b"], "commands": ["editor.debug.action.toggleBreakpoint"] },
    { "before": ["<leader>", "c"], "commands": ["editor.action.clipboardCopyAction"] },
    { "before": ["<leader>", "v"], "commands": ["editor.action.clipboardPasteAction"] },
    { "before": ["<leader>", "x"], "commands": ["editor.action.clipboardCutAction"] },

    { "before": ["<leader>", "m"], "commands": ["editor.action.formatDocument"] },
    { "before": ["<leader>", "n"], "commands": ["workbench.action.files.newUntitledFile"] },
    { "before": ["<leader>", "s"], "commands": ["workbench.action.files.newUntitledFile"] },
    { "before": ["<leader>", "t"], "commands": ["workbench.action.tasks.showTasks"] },

    // Navigation / go-to equivalents
    { "before": ["<leader>", "i"], "commands": ["editor.action.goToImplementation"] },
    { "before": ["<leader>", "I"], "commands": ["editor.action.codeAction"] },
    { "before": ["<leader>", "g"], "commands": ["editor.action.quickFix"] },
    { "before": ["<leader>", "h"], "commands": ["editor.action.goToTypeDefinition"] },
    { "before": ["<leader>", "u"], "commands": ["editor.action.goToDeclaration"] },

    // Replace / find / copy-path / other common actions
    { "before": ["<leader>", "R"], "commands": ["editor.action.startFindReplaceAction"] },
    { "before": ["<leader>", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<leader>", "F"], "commands": ["workbench.action.findInFiles"] },
    { "before": ["<leader>", "p"], "commands": ["copyFilePath"] },
    { "before": ["<leader>", "pn"], "commands": ["extension.copyPathWithLine"] }, // not working
    { "before": ["<leader>", "q"], "commands": ["editor.action.showHover"] },
    { "before": ["<leader>", "k"], "commands": ["workbench.action.showCommands"] },
    { "before": ["<leader>", "K"], "commands": ["git.openChange"] },// not working

  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    { "before": ["<leader>", "c"], "commands": ["editor.action.commentLine"] }
  ],
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.autoSave": "afterDelay",
  "git.blame.statusBarItem.enabled": true,
  "git.blame.editorDecoration.enabled": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.experimental.showMoves": true,
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "gitlens.currentLine.enabled": false,
  "gitlens.views.branches.files.layout": "tree",
  "atlascode.rovodev.showEntitlementNotifications": false,
  "atlascode.bitbucket.enabled": false,
  "atlascode.jira.startWorkBranchTemplate.customTemplate": "{{{prefix}}}{{{issueKey}}}_{{{summary}}}",
  "atlascode.rovodev.enabled": false,
  "docker.extension.enableComposeLanguageServer": false,
  "chat.tools.terminal.autoApprove": {
    "docker compose": true
  },
  "chat.mcp.gallery.enabled": true,
  "chat.viewSessions.orientation": "stacked",
  "gitlab.duoCodeSuggestions.openTabsContext": false,
  "gitlab.duoCodeSuggestions.enabled": false,
}
