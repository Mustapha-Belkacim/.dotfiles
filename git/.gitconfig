[core]
	untrackedCache = true
	fsmonitor = true
    pager = delta
    editor = nvim

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true
    hyperlinks = true
    syntax-theme = gruvbox-dark
    ; syntax-theme = "Catppuccin-mocha"
    light = false      # set to true if you're in a terminal w/ a light background color

[diff]
    tool = nvimdiff
    colorMoved = default
    algorithm = histogram

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"

[commit]
    verbose = true

[transfer]
    fsckObjects = true

[fetch]
	writeCommitGraph = true

[merge]
    conflictstyle = zdiff3

[rebase]
	instructionFormat = (%an <%ae>) %s
    autosquash = true

[rerere]
    enabled = true

[push]
    autoSetupRemote = true

[pull]
    rebase = true

[init]
   defaultBranch = main

[help]
    autocorrect = 10

[color]
    ui = true
